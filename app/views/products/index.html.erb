<p style="color: green"><%= notice %></p>

<h1>Merlin Notifier Products</h1>

<div id="products">
  <table>
    <thead>
      <tr>
        <th>
          <strong>Merlin ID</strong>
        </th>
        <th>
          <strong>Name</strong>
        </th>
        <th>
          <strong>Stock qty</strong>
        </th>
        <th>
          <strong>Price</strong>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <%= render product %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New product", new_product_path %>
